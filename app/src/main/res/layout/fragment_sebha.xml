<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/head_sebha"
        android:src="@drawable/head_sebha_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/body_sebha"
        app:layout_constraintEnd_toEndOf="@id/body_sebha"
        android:adjustViewBounds="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"/>

    <ImageView
        android:id="@+id/body_sebha"
        android:src="@drawable/body_sebha_logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:layout_marginTop="90dp"/>

    <TextView
        android:id="@+id/tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/body_sebha"
        app:layout_constraintStart_toStartOf="@id/body_sebha"
        app:layout_constraintEnd_toEndOf="@id/body_sebha"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tasbeh"
        app:layout_constraintStart_toStartOf="@id/tasbeh"
        app:layout_constraintEnd_toEndOf="@id/tasbeh"
        android:layout_marginTop="30dp"
        android:background="@drawable/counter_background"
        android:padding="20dp"/>

    <Button
        android:id="@+id/sebha_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/counter"
        app:layout_constraintStart_toStartOf="@id/counter"
        app:layout_constraintEnd_toEndOf="@id/counter"
        android:layout_marginTop="30dp"
        android:text="سبحان الله"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/sebha_btn_background"/>



</androidx.constraintlayout.widget.ConstraintLayout>